    <!-- LOCKED STATE -->
    <div class="locked-overlay" id="lockedOverlay">
      <div class="lock-icon">üîí</div>
      <div class="lock-title">Account Locked</div>
      <div class="lock-msg">Too many failed attempts. Please wait before trying again.</div>
      <div class="countdown" id="countdown">0:30</div>
    </div>

    <!-- LOGIN FORM -->
    <div id="loginForm">
      <!-- ERROR -->
      <div class="error-msg" id="errorMsg">
        <span>‚ö†Ô∏è</span>
        <span id="errorText">Invalid username or password.</span>
      </div>

      <!-- USERNAME -->
      <div class="form-group">
        <label>Username</label>
        <div class="input-wrap">
          <span class="input-icon">üë§</span>
          <input type="text" id="username" placeholder="Enter your username" autocomplete="username"/>
        </div>
      </div>

      <!-- PASSWORD -->
      <div class="form-group">
        <label>Password</label>
        <div class="input-wrap">
          <span class="input-icon">üîë</span>
          <input type="password" id="password" placeholder="Enter your password" autocomplete="current-password"/>
          <button class="eye-btn" onclick="togglePassword()" id="eyeBtn" type="button">üëÅÔ∏è</button>
        </div>
      </div>

      <!-- REMEMBER -->
      <div class="remember-row">
        <label>
          <input type="checkbox" id="remember"/> Remember me
        </label>
        <a href="#" class="forgot" onclick="showForgot()">Forgot password?</a>
      </div>

      <!-- BUTTON -->
      <button class="login-btn" id="loginBtn" onclick="doLogin()">
        <span class="btn-text">Sign In to Admin</span>
        <span class="spinner"></span>
      </button>

      <div class="attempts" id="attemptsMsg"></div>

      <div class="divider">default credentials</div>

      <div class="hint-box">
        üë§ Username: <strong>admin</strong><br/>
        üîë Password: <strong>admin123</strong><br/>
        <span style="font-size:0.72rem;margin-top:4px;display:block;color:#6b8fa3;">‚ö†Ô∏è Change these after your first login in Settings</span>
